<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="org.eclipse.stem.ui.STEMPerspective"
         point="org.eclipse.ui.perspectives">
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.eclipse.stem.ui.views"
            class="org.eclipse.stem.ui.reports.views.TimeSeriesView"
            icon="icons/sample.gif"
            id="org.eclipse.stem.ui.views.reports"
            name="%TS_View">
         Reports
      </view>
      <view
            allowMultiple="true"
            category="org.eclipse.stem.ui.views"
            class="org.eclipse.stem.ui.reports.views.PhaseSpaceView"
            icon="icons/sample.gif"
            id="org.eclipse.stem.ui.views.reports.phaseSpace"
            name="%PS_View">
      </view>
      <view
      		allowMultiple="true"
            category="org.eclipse.stem.ui.views"
            class="org.eclipse.stem.ui.reports.views.AggregateTimeSeriesView"
            icon="icons/sample.gif"
            id="org.eclipse.stem.ui.views.reports.aggregate"
            name="%AS_View">
      </view>
   </extension>
   <extension point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.stem.ui.reports.views.ReportsContextMenuAction"
            id="TimeSeries"
            name="TimeSeriesCommand">
      </command>
     <command
            defaultHandler="org.eclipse.stem.ui.reports.views.ReportsContextMenuAction"
            id="PhaseSpace"
            name="TimeSeriesCommand">
      </command>
      <command
            defaultHandler="org.eclipse.stem.ui.reports.views.ReportsContextMenuAction"
            id="AggregateTimeSeries"
            name="TimeSeriesCommand">
      </command>
   </extension>
     <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="popup:reports">
        <command
              commandId="TimeSeries"
			  label="%TS_View"	 
              style="push">
        </command>
     </menuContribution>
     <menuContribution
           locationURI="popup:reports">
        <command
              commandId="PhaseSpace"
			  label="%PS_View"	 
              style="push">
        </command>
     </menuContribution>
     <menuContribution
           locationURI="popup:reports">
        <command
              commandId="AggregateTimeSeries"
			  label="%AS_View"	 
              style="push">
        </command>
     </menuContribution>
  </extension>
