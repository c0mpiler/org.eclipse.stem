<?xml version="1.0"?>
<!-- ====================================================================== 
	ANT script to build org.eclipse.stem.geography project and the initial set 
	of STEM scenarios. This must be run after installing the STEM workspace and 
	after changes to code generated by EMF models. ====================================================================== -->
<project name="STEM Product" default="updateVersion">
	<description>
		Add date to the build version.
	</description>
	<tstamp>
		<format property="time.stamp" pattern="yyyyMMddHHmmss" />
	</tstamp>
	<target name="updateVersion">
		<replaceregexp match="4.0.0_.*?v" replace="4.0.3_${time.stamp}">
			<fileset dir="." includes="STEM.product" />
		</replaceregexp>
	</target>
	<target name="revokeVersion">
		<replaceregexp match="4.0.0_[0-9]+" replace="4.0.0_v">
			<fileset dir="." includes="STEM.product" />
		</replaceregexp>
	</target>
</project>
